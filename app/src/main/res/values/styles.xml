<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="cmAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:title">@string/app_name</item>
        <item name="android:textColorSecondary">@color/materialForeground</item>
        <item name="android:textColor">@color/materialForeground</item>
    </style>

    <style name="cmCardView" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/distance_ms</item>
        <item name="android:layout_marginBottom">@dimen/distance_small</item>
        <item name="android:layout_marginLeft">@dimen/distance_small</item>
        <item name="android:layout_marginRight">@dimen/distance_small</item>
        <item name="android:padding">@dimen/distance_medium</item>
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
    </style>

    <style name="cmLLContentWrapper">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/distance_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cmTextView">
        <item name="android:textColor">@color/newBlack</item>
        <item name="android:textSize">@dimen/text_view_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cmInputBox">
        <item name="android:textSize">@dimen/text_box_font_size</item>
        <item name="android:layout_margin">@dimen/distance_small_plus</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cmButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_box_font_size</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginBottom">@dimen/distance_medium</item>
        <item name="android:padding">@dimen/distance_small_plus</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearanceButton">@style/cmTextView</item>
    </style>

    <style name="cmSecondaryButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_box_font_size</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginBottom">@dimen/distance_medium</item>
        <item name="android:padding">@dimen/distance_small_plus</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearanceButton">@style/cmTextView</item>
    </style>

</resources>